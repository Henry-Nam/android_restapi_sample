<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.pay.david.kakaopay.viewmodel.RepositoryItemViewModel" />
    </data>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="4dp"
        android:clickable="true"
        card_view:cardElevation="5dp"
        android:foreground="?selectableItemBackground"
        android:onClick="@{viewModel::onItemClick}"
        android:orientation="vertical"
        app:cardUseCompatPadding="true"
        tools:showIn="@layout/activity_main_list">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/item_video_image"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    bind:imageUrl="@{viewModel.url}"/>

                <LinearLayout
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:weightSum="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="0.2"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{viewModel.title}"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeStepGranularity="1sp"
                        tools:text="title" />

                    <TextView
                        android:id="@+id/item_desc"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:scrollbars="vertical"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="15sp"
                        app:autoSizeStepGranularity="1sp"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/item_title"
                        android:text="@{viewModel.description}"
                        tools:text="desc" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/item_publishedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="1dp"
                android:maxLines="1"
                android:text="@{viewModel.publishedAt}"
                android:textAlignment="center"
                app:autoSizeMaxTextSize="1sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeStepGranularity="1sp"
                android:textColor="#50000000"
                tools:text="date" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>